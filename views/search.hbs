{{> header}}
<style>
    .enlace {
        color: black;
    }

    .pointer-cursor {
        cursor: pointer;
    }

    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }

    .btn:focus {
        outline: none;
        box-shadow: none;
        background-color: rgba(0, 0, 0, 0);
        color: rgb(108, 117, 125);
    }

    .cart-container {
        width: 80%;
        margin: auto;

    }

    .cart-item {
        width: 100%;
        background-color: white;
        margin: auto;
        height: 140px;
        margin-bottom: 10px;
        position: relative;
    }

    .item-cover {
        width: 100px !important;
        height: 140px;
        background-color: black;
        display: inline-block;
    }

    .item-content {
        padding-left: 5px;
        overflow: hidden;
        display: inline;

    }

    .item-title {
        max-width: 50%;
        max-height: 40px;
        overflow: hidden;
        display: inline-block;
        vertical-align: top;
        text-overflow: ellipsis;
        line-height: 1.2;
        margin-top: 5px;

    }

    .item-author {
        position: relative;
        overflow: hidden;
        margin-left: 110px;
        margin-top: -90px;
        color: #00A86B;
        max-height: 30px;
        max-width: 30%;
    }

    .item-qty {
        position: relative;
        margin-left: 80%;
        margin-top: -40px;
        text-align: center;
        width: 120px;
    }

    .item-qty input {
        width: 50px !important;
        text-align: center
    }

    .input-group {
        width: 120px
    }

    .btn-qty {
        width: 36px
    }

    .item-price {
        font-size: 25px;
        position: absolute;
        right: 1%;
        font-size: 25px;
    }

    .item-drop {
        position: absolute;
        top: 0px;
        right: 1%;
        color: #696969;
        cursor: pointer;
    }

    .book-shorcuts {
        position: absolute;
        left: 110px;
        bottom: 20px;
    }

    .mob-only {
        display: none;
    }

    .mob-only-2 {
        display: none;
    }


    @media only screen and (max-width: 768px) {
        .cart-container {
            width: 100%;
        }

        .item-author {

            max-width: 50%;
        }
    }

    @media only screen and (max-width: 570px) {
        html {
            overflow-x: hidden;
        }

        .mob-marg {
            margin-left: 10px;
        }

        .mob-only {
            display: inline;
            cursor: pointer;
        }

        .mob-only-2 {
            cursor: pointer;
        }

        .mb-autores {
            display: none;
        }
    }

    .lbl-chck {
        display: inline-block;
        width: 100px;
        height: 23px;
        overflow: hidden;
        vertical-align: text-top;
        margin: 0
    }
</style>
