                                    }).done(function (result) {
                                        window.location = "/thanks";
                                    }).fail(function (xhr, status, error) {
                                    })
                                }).fail(function (xhr, status, error) {
                                })
                            });
                        }
                    }).render('#paypal-button-container');
                }
            })
            .fail(function (xhr, status, error) {
            })
            .always(function (data) {
