{{> header}}
<style>
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .disable-select {
        user-select: none;
        /* supported by Chrome and Opera */
        -webkit-user-select: none;
        /* Safari */
        -khtml-user-select: none;
        /* Konqueror HTML */
        -moz-user-select: none;
        /* Firefox */
        -ms-user-select: none;
        /* Internet Explorer/Edge */
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }

    .btn:focus {
        outline: none;
        box-shadow: none;
        background-color: rgba(0, 0, 0, 0);
        color: rgb(108, 117, 125);
    }

    .cart-container {
        width: 800px;
        margin: auto;

    }

    .cart-item {
        width: 100%;
        background-color: white;
        margin: auto;
        height: 140px;
        margin-bottom: 10px;
        position: relative;
    }

    .item-cover {
        width: 100px !important;
        height: 140px;
        background-color: black;
        display: inline-block;
    }

    .item-content {
        padding-left: 5px;
        overflow: hidden;
        display: inline;

    }

    .item-title {
        max-width: 50%;
        max-height: 40px;
        overflow: hidden;
        display: inline-block;
        vertical-align: top;
        text-overflow: ellipsis;
        line-height: 1.2;
        margin-top: 5px;

    }

    .item-author {
        position: relative;
        overflow: hidden;
        margin-left: 110px;
        margin-top: -90px;
        color: #00A86B;
        max-height: 30px;
        max-width: 30%;
    }

    .item-qty {
        position: relative;
        margin-left: 80%;
        margin-top: -40px;
        text-align: center;
        width: 120px;
    }

    .item-qty input {
        width: 50px !important;
        text-align: center
    }

    .input-group {
        width: 120px
    }

    .btn-qty {
        width: 36px
    }

    .item-price {
        margin-left: 500px;
        margin-top: -40px;
        font-size: 20px;
    }

    .item-drop {
        position: absolute;
        top: 0px;
        right: 1%;
        color: #696969;
        cursor: pointer;
    }

    .total {
        text-align: right;
        display: block;
        font-size: 25px;
        margin-right: 5px;
        margin-bottom: 10px;
    }

    @media only screen and (max-width: 768px) {
        .cart-container {
            width: 100%;
        }

        .item-qty {
            position: relative;
            margin-left: 65%;
            margin-top: -30px;
            text-align: center;
            width: 120px;
        }

        .qty-lbl {
            position: relative;
            top: 68px;
        }

        .btn-qty {
            text-align: center !important;
            width: 30px
        }

        .item-price {
            margin-left: 120px;
        }

        .item-author {

            max-width: 50%;
        }


    }
</style>
{{> navbar}}
<div id="cart-container" class="cart-container">
    <h2 style="text-align: center;">Carrito</h2>
    <hr>
    {{#if lleno}}
    {{#each items}}
    <div class="cart-item" id="c{{this.codigo}}">
        <div class="item-cover">
            <img width="100" height="140" src="data:image/jpg;base64,{{this.img}}">
        </div>
        <div class="item-content">
            <div class="item-title"> {{this.titulo}}</div>
            <div class="item-author">{{this.autor}}</div>
            <div class="item-qty">
                <label class="qty-lbl">Cantidad</label>
                <div class="input-group qty">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary btn-qty" type="button" id="removeone"
                            onclick="removeone('{{this.codigo}}','{{this.precio}}')">-</button>
                    </div>
                    <input readonly type="number" id="{{this.codigo}}" class=""
                        aria-label="Example text with button addon" aria-describedby="button-addon1"
                        value="{{this.cantidad}}">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary btn-qty" type="button" id="addone"
                            onclick="addone('{{this.codigo}}',{{this.stock}})">+</button>
                    </div>
                </div>
            </div>
            <div class="item-price">$ {{this.preciostr}}</div>
            <div class="item-drop disable-select" onclick="dropitem('{{this.codigo}}')">X</div>
        </div>
    </div>
    {{/each}}
